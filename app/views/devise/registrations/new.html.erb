<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <!-- typical bootstrap intro. Containter, row, column. Used
      col-md-offset-4 to center it in the 12 column system -->
          <div class="text-center">
          <% if params[:plan] == '2' %>
            <h1>Pro Account</h1>
            <p>Sign up for the pro account for $10/month and get access to the community and contact information</p>
          <% else %>
            <h1>Basic Account</h1>
            <p>Sign up for free and get basic access to the community</p>
          <% end %> 
        </div>
        <div class="well">
          <h2>Sign up</h2>
          
          <% if params[:plan] == '2' %>
            <%= render "pro_form" %>
            <!-- This one line of code tells html to look for file w/ that name and an underscore -->
          <% else %>
            <%= render "basic_form" %>
          <% end %>
          
          <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>