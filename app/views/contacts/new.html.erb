<div class="container">
    <div class ="row"></div>
        <h3 class="text-center">Contact Us</h3>
            
            <div class="col-md-4 col-md-offset-4">
                <% flash.each do |type, msg| %>
                    <%= content_tag :div, msg, class: "alert alert-#{type}" %>
                    <!--Used rails to create div for us
                    String interpulation. Type refers to key we use, danger or success
                    msg assigns to whatever assigned to keys in hash (like "Message sent")
                <!-- shows messages from contacts_controller -->
                <% end %>
                <div class="well">
                    <!-- Put form-group div class on each entry, 
                    not the whole form. Doing so made them on their
                     own lines
                    <!-- Can add class fields to the RAILS text fields-->
                    <%= form_for @contact do |f| %>
                    <!--Changed from "/contacts" to isntance variable in 
                    controller file-->
                        <div class="form-group">
                            <%= f.label :name %>
                            <%= f.text_field :name, class: 'form-control' %>
                        </div>
                        
                        <div class="form-group">
                            <%= f.label :email %>
                            <%= f.text_field :email, class: 'form-control' %>
                        </div>    
                        
                        <div class="form-group">
                            <%= f.label :comments %>
                            <%= f.text_area :comments, class: 'form-control' %>
                        </div>
                    
                        <%= f.submit 'Submit', class: 'btn btn-default' %>
                    <% end %>
                </div>
            </div>
    </div>
</div> 